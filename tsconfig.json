{
    "compilerOptions": {
        "target": "ESNext",
        "module": "NodeNext",
        "strict": true,
        "esModuleInterop": true,
        "moduleResolution": "node16",
        "sourceMap": true,
        "rootDir": "src",
        "outDir": "dist/",
        "allowSyntheticDefaultImports": true,
        "lib": [ "esnext.decorators" ],
        "exactOptionalPropertyTypes": true,
    },
    "include": [
        "src/"
    ]
}
